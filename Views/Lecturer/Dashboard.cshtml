@{
    ViewData["Title"] = "Lecturer Dashboard";
    var claims = ViewBag.Claims as List<ProgPOEP1.Models.Claim>;
}

<h2>Lecturer Dashboard</h2>

<div class="mb-4">
    <a href="/Lecturer/SubmitClaim" class="btn btn-primary">Submit New Claim</a>
</div>

<div class="card">
    <div class="card-header">Claim History</div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Hours Worked</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in claims)
                {
                    <tr>
                        <td>@claim.Month</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
