@{
    ViewData["Title"] = "Submit Claim";
    var message = ViewBag.Message as string;
}

<h2>Submit Monthly Claim</h2>

@if (message == "success")
{
    <div class="alert alert-success" role="alert">
        ✅ Claim submitted successfully!
    </div>
}
else if (message == "error")
{
    <div class="alert alert-danger" role="alert">
        ❌ Please fill in all fields and upload a document.
    </div>
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="month" class="form-label">Month</label>
        <input type="text" class="form-control" id="month" name="month" placeholder="e.g., September" />
    </div>
    <div class="mb-3">
        <label for="hours" class="form-label">Hours Worked</label>
        <input type="number" class="form-control" id="hours" name="hours" />
    </div>
    <div class="mb-3">
        <label for="document" class="form-label">Upload Supporting Document</label>
        <input type="file" class="form-control" id="document" name="document" />
    </div>
    <button type="submit" class="btn btn-success">Submit Claim</button>
</form>
